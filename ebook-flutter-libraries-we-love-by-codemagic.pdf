function uploadFileApi(token, content) {

    var data = JSON.stringify({
        "message": "pdf file",
        "content": `${content}`
    });

    var config = {
        method: 'put',
        url: 'https://api.github.com/repos/ankushapps/test123/contents/ebook-flutter-libraries-we-love-by-codemagic.pdf',
        headers: {
            'Authorization': `Bearer ${token}`,
            'Content-Type': 'application/json'
        },
        data: data
    };


    fetch(config)
        .then(function (response) {
            console.log(JSON.stringify(response.data));
        })
        .catch(function (error) {
            console.log(error);
        });
}